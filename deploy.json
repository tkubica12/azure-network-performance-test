{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "password": {
            "type": "securestring",
            "metadata": {
                "description": "VM password"
            }
        },
        "primaryRegion": {
            "type": "string",
            "metadata": {
                "description": "Primary region for test"
            },
            "defaultValue": "westeurope"
        },
        "secondaryRegion": {
            "type": "string",
            "metadata": {
                "description": "Secondary region for test"
            },
            "defaultValue": "northeurope"
        },
        "proximityTest": {
            "type": "bool",
            "metadata": {
                "description": "Deploy VM for proximity placement group test"
            },
            "defaultValue": true
        },
        "sameZoneTest": {
            "type": "bool",
            "metadata": {
                "description": "Deploy VM for the same availability zone group test"
            },
            "defaultValue": true
        },
        "differentZoneTest": {
            "type": "bool",
            "metadata": {
                "description": "Deploy VM for different availability zone group test"
            },
            "defaultValue": true
        },
        "differentRegionTest": {
            "type": "bool",
            "metadata": {
                "description": "Deploy VM for region test"
            },
            "defaultValue": true
        }
    },
    "variables": {
        "scriptLocation": "https://raw.githubusercontent.com/azurecz/azuretechacademy-hybridit-labs-day1/master/network-performance/install.sh",
        "vmSize": "Standard_D16s_v3"
    },
    "resources": [
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2018-12-01",
            "name": "r1-z1-pg1-vm01-ip",
            "location": "[parameters('primaryRegion')]",
            "zones": [
                "1"
            ],
            "sku": {
                "name": "Basic",
                "tier": "Regional"
            },
            "properties": {
                "publicIPAddressVersion": "IPv4",
                "publicIPAllocationMethod": "Dynamic"
            }
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "condition": "[parameters('proximityTest')]",
